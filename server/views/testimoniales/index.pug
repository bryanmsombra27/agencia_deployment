extends ../layout/index

block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row   

           .col-md-12
               include ../layout/partials/testimoniales
           .col-md-12
           
               h2.text-center Agrega un Testimonial
               if(errores)
                    each error in errores
                         .alert.alert-danger.text-center=error.mensaje
               .row.justify-content-center
                    .col-md-8   
                        form(action='/testimoniales', method="POST")
                           .form-group
                                label(for="nombre") Nombre
                                input(id="nombre",type="text",class="form-control", placeholder="Tu Nombre", name="nombre",value=nombre)
                           .form-group
                                label(for="email") Correo Electronico
                                input(id="email",type="email",class="form-control", placeholder="Tu Correo Electronico", name="correo",value=correo)
                           .form-group
                                label(for="mensaje") Mensaje
                                textarea(id="mensaje",class="form-control", placeholder="Tu Mensaje", name="mensaje", rows="3")=mensaje
                           input.btn.btn-success.btn-block(type="submit", value="Agregar")                      