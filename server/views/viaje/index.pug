extends ../layout/index

block contenido
    main.container.mt-5
            .row
                .col-md-5
                    img.img-fluid(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="")
                .col-md-7   
                     h1 #{viaje.titulo}
                     p 
                                i.fas.fa-calendar-alt 
                                | Fecha Ida: #{viaje.fecha_ida} - Fecha Vuelta: #{viaje.fecha_vuelta}
                     p 
                                i.fas.fa-dollar-sign
                                |  #{viaje.precio} MXN
                     p 
                                i.fas.fa-users
                                |  #{viaje.disponibles} Disponibles
                     p.text-justify #{viaje.descripcion}
